# to compile radl files

export RADL_GIT_DIR=~/Desktop/ros_groovy_base_radl

export RADL_INSTALL_DIR=/opt/hacms/landshark
sudo mkdir $RADL_INSTALL_DIR
sudo chmod -R 777 $RADL_INSTALL_DIR

cd $RADL_GIT_DIR/radl
make cmu

#put .radlo in same dir as the cmu nodes will be built in
export O_DIR=/opt/hacms/cmu_radl/catkin_ws/src
sudo mkdir -p $O_DIR
sudo chmod -R 777 $O_DIR

sudo ../radler/radler.sh --ws_dir $O_DIR compile constants.radl -o $O_DIR/constants.radlo
sudo ../radler/radler.sh --ws_dir $O_DIR compile arrays.radl -o $O_DIR/arrays.radlo
sudo ../radler/radler.sh --ws_dir $O_DIR compile topics.radl -O $O_DIR/arrays.radlo -o $O_DIR/topics.radlo
sudo ../radler/radler.sh --ws_dir $O_DIR compile landshark.radl -O $O_DIR/constants.radlo -O $O_DIR/arrays.radlo -O $O_DIR/topics.radlo -o $O_DIR/landshark.radlo


